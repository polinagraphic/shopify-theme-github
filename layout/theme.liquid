<!doctype html>
<html>
  <head>
    <link rel="preload" href="https://cdn.shopify.com/s/files/1/0767/1146/1116/files/BowlbyOne-Regular.woff?v=1756926076" as="font" type="font/woff" crossorigin>

    <style>
    @font-face {
      font-family: 'BowlbyOne';
      src: url('https://cdn.shopify.com/s/files/1/0767/1146/1116/files/BowlbyOne-Regular.woff?v=1756926076') format('woff');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

    /* Headings: uppercase */
    h1, h2, h3, h4, h5, h6 {
      font-family: 'BowlbyOne', sans-serif !important;
      text-transform: uppercase !important;
    }

    /* Buttons: lowercase + custom style
       Apply only in MainContent and footer (not header) */
    main button,
    main .button,
    main .btn,
    #shopify-section-footer-group button,
    #shopify-section-footer-group .button,
    #shopify-section-footer-group .btn,
    main .shopify-payment-button__button--unbranded,
    main .cart__checkout-button,
    #shopify-section-footer-group .shopify-payment-button__button--unbranded,
    #shopify-section-footer-group .cart__checkout-button {
      font-family: 'BowlbyOne', sans-serif !important;
      text-transform: lowercase !important;
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
      gap: 10px !important;
      padding: 10px 16px !important;
      border-radius: 100px !important;
         background: #00c05a !important;
    border: none !important;
      color:rgb(255, 255, 255) !important;
      line-height: 1 !important;
      cursor: pointer !important;
      transition: transform .08s ease, box-shadow .08s ease, background .15s ease, color .15s ease !important;
    }

    main button:hover,
    main .button:hover,
    main .btn:hover,
    #shopify-section-footer-group button:hover,
    #shopify-section-footer-group .button:hover,
    #shopify-section-footer-group .btn:hover {
      transform: translate(-1px, -1px) !important;
      box-shadow: 5px 5px 0 0 #592898 !important;
    }
     main button:hover,
    main .button:hover{
        background: #F0FCCC !important;
    color: #00C059 !important;
}
    /* 
    main button:active,
    main .button:active,
    main .btn:active,
    #shopify-section-footer-group button:active,
    #shopify-section-footer-group .button:active,
    #shopify-section-footer-group .btn:active {
      transform: translate(0, 0) !important;
      box-shadow: 4px 4px 0 0 #592898 !important;
    } 

    main button:focus-visible,
    main .button:focus-visible,
    main .btn:focus-visible,
    #shopify-section-footer-group button:focus-visible,
    #shopify-section-footer-group .button:focus-visible,
    #shopify-section-footer-group .btn:focus-visible {
      outline: 2px solid #592898 !important;
      outline-offset: 2px !important;
    }*/

    main button[disabled],
    main .button[disabled],
    main .btn[disabled],
    #shopify-section-footer-group button[disabled],
    #shopify-section-footer-group .button[disabled],
    #shopify-section-footer-group .btn[disabled] {
      opacity: .6 !important;
      cursor: not-allowed !important;
      transform: none !important;
    }
    </style>

    {%- render 'stylesheets' -%}

    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    >

    {%- render 'meta-tags' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {{ content_for_header }}
  </head>

  <body class="page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}">
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <script
      src="{{ 'critical.js' | asset_url }}"
      type="module"
      async
      blocking="render"
    ></script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}
  </body>
</html>
