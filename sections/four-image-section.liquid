<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/tiny-slider.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/min/tiny-slider.js"></script>

{% style %}
.four-image-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: {{ section.settings.gap }}px;
  margin-top: {{ section.settings.m_top }}px;
  margin-bottom: {{ section.settings.m_bottom }}px;
  flex-wrap: wrap;
}

.four-image-section .image-container {
  border-radius: 50%;
  width: {{ section.settings.image_size }}px;
  height: {{ section.settings.image_size }}px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  flex-shrink: 0;
}

.four-image-section .image-container img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: 50%;
}

/* Slider styles (mobile only) */
@media (max-width: 991px) {
  .four-image-section {
    display: block;
  }

  .tns-outer {
    position: relative;
  }

  .tns-ovh {
    overflow: hidden;
  }

  .tns-inner {
    display: flex;
  }

  .tns-slide {
    display: flex !important;
    justify-content: center;
  }

  .four-image-section .image-container {
    width: 100px;
    height: 100px;
    margin: 0 auto;
  }

  .tns-nav,
  .tns-controls {
    display: none !important;
  }
}
{% endstyle %}

<div class="four-image-section" id="fourImageSlider">
  {% for i in (1..6) %}
    {% assign image = section.settings["image_" | append: i] %}
    {% assign bg = section.settings["bg_color_" | append: i] %}
    {% if image %}
      <div class="image-container" style="background-color: {{ bg }};">
        <img src="{{ image | img_url: '200x200' }}" alt="{{ image.alt | default: 'icon' }}">
      </div>
    {% endif %}
  {% endfor %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  if (window.innerWidth <= 991) {
    var slider = tns({
      container: '#fourImageSlider',
      items: 3,
      gutter: 10,
      slideBy: 1,
      autoplay: false,
      controls: false,
      nav: false,
      mouseDrag: true,
      swipeAngle: false,
      speed: 400,
    });
  }
});
</script>

