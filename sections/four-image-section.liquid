{% style %}
.four-image-section {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.gap }}px;
    margin-top: {{ section.settings.m_top }}px;
    margin-bottom: {{ section.settings.m_bottom }}px;
}
.four-image-section .image-container {
    border-radius: 100px;
    width: {{ section.settings.image_size }}px;
}
@media (max-width: 768px) {
  .four-image-section {
    overflow-x: auto;
    flex-wrap: nowrap;
    justify-content: flex-start;
    -webkit-overflow-scrolling: touch;
    scroll-snap-type: x mandatory;
    gap: {{ section.settings.gap }}px;
  }

  .four-image-section::-webkit-scrollbar {
    display: none; /* hide scrollbar on mobile */
  }

  .four-image-section .image-container {
    scroll-snap-align: start;
    width: calc((100% - ({{ section.settings.gap }}px * 3)) / 4); /* show 4 images by default */
    flex: 0 0 auto;
  }

  .four-image-section img {
    width: 100%;
    height: auto;
    display: block;
  }
}

{% endstyle %}


<div class="four-image-section">
    <div class="image-container" style="background-color: {{ section.settings.bg_color }};">
        {% if section.settings.image_1 %}
            <img src="{{ section.settings.image_1 | img_url: 'medium' }}" alt="{{ section.settings.image_1.alt }}">
        {% endif %}
