{% style %}
.four-image-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: {{ section.settings.gap }}px;
  margin-top: {{ section.settings.m_top }}px;
  margin-bottom: {{ section.settings.m_bottom }}px;
}

.four-image-section .image-container {
  border-radius: 100px;
  width: {{ section.settings.image_size }}px;
  height: {{ section.settings.image_size }}px;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.four-image-section .image-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 100%;
}

/* Desktop Only */
@media (min-width: 769px) {
  .for-mobile_only {
    display: none !important;
  }
}

/* Mobile Only */
@media (max-width: 768px) {
  .four-image-section {
    display: none !important;
  }

  .for-mobile_only {
    display: block;
    width: 100%;
  }

  .swiper {
    width: 100%;
    height: auto;
    padding: 20px 0;
  }

  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .swiper-slide .image-container {
    width: 150px;
    height: 150px;
    border-radius: 100%;
  }

  .swiper-slide .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 100%;
  }

  /* Optional: add arrows or dots below */
  .swiper-pagination {
    margin-top: 15px;
    position: static;
  }
}
{% endstyle %}


