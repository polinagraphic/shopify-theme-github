{% style %}
.four-image-section {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.gap }}px;
    margin-top: {{ section.settings.m_top }}px;
    margin-bottom: {{ section.settings.m_bottom }}px;
}
.four-image-section .image-container {
    border-radius: 100px;
    width: {{ section.settings.image_size }}px;
    flex-shrink: 0;
}
@media (max-width: 768px) {
    .four-image-section {
        overflow-x: auto;
        display: flex;
        flex-wrap: nowrap;
        gap: 0;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
        padding-left: 10vw;
        padding-right: 10vw;
    }
    .four-image-section .image-container {
        scroll-snap-align: start;
        width: 90vw;
        margin-right: -80vw;
    }
    .four-image-section .image-container:nth-child(2) {
        width: 10vw;
        margin-left: -10vw;
        margin-right: 0;
    }
    .four-image-section .image-container:nth-child(4) {
        width: 50vw;
        margin-left: 0;
        margin-right: -40vw;
    }
    .four-image-section .image-container:not(:nth-child(1)):not(:nth-child(2)):not(:nth-child(4)) {
        width: 0;
        margin: 0;
        display: none;
    }
}
{% endstyle %}

<div class="four-image-section">
    <div class="image-container" style="background-color: {{ section.settings.bg_color }};">
        {% if section.settings.image_1 %}
            <img src="{{ section.settings.image_1 | img_url: 'medium' }}" alt="{{ section.settings.image_1.alt }}">
        {% endif %}
    </div>
    <div class="image-container" style="background-color: {{ section.settings.bg_color_2 }};">
